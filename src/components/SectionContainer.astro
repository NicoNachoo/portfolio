---
const { title, id, class: className } = Astro.props;
---

<section
    id={id}
    class={`h-full mx-8 xl:mr-20 lg:w-1/3 pb-20 xl:pb-20 flex justify-end flex-col ${className}`}
>
    <h2
        class="xl:sticky xl:top-0 xl:z-20 text-4xl mb-4 pt-2 flex gap-x-2 justify-center items-center font-extrabold"
    >
        {title}
    </h2>
    <slot />
</section>
